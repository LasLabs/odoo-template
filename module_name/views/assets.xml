<openerp>
    <data>

        <template id="assets_backend"
                  name="Module name backend assets"
                  inherit_id="web.assets_backend">
            <xpath expr=".">
                <link rel="stylesheet"
                      href="/module/static/src/css/module_name.css"/>
                <script type="text/javascript"
                        src="/module/static/src/js/module_name.js"/>
            </xpath>
        </template>
        
        <template id="assets_frontend"
                  name="Module name frontend assets"
                  inherit_id="website.assets_frontend">
            <xpath expr=".">
                <link rel="stylesheet"
                      href="/module/static/src/css/module_name.css"/>
                <script type="text/javascript"
                        src="/module/static/src/js/module_name.js"/>
            </xpath>
        </template>

    </data>
</openerp>
